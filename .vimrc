noremap <c-k> :m -2<CR>
noremap <c-j> :m +1<CR>
noremap <c-l> :bn<CR>
noremap <c-h> :bp<CR>
noremap <c-b> :bd<CR>
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
highlight ColorColumn ctermbg=gray
set colorcolumn=80
set nu

let g:cpp_member_variable_highlight = 1
let g:cpp_class_decl_highlight = 1

set splitbelow
set splitright
set hlsearch

colorscheme atom-dark-256

